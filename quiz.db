import sqlite3

def create_database():
    connection = sqlite3.connect('quiz.db')
    cursor = connection.cursor()

    cursor.execute('''CREATE TABLE IF NOT EXISTS questions (
                        id INTEGER PRIMARY KEY,
                        question TEXT NOT NULL,
                        option1 TEXT NOT NULL,
                        option2 TEXT NOT NULL,
                        option3 TEXT NOT NULL,
                        answer TEXT NOT NULL
                    )''')

    cursor.execute('''CREATE TABLE IF NOT EXISTS results (
                        id INTEGER PRIMARY KEY,
                        username TEXT NOT NULL,
                        score INTEGER NOT NULL
                    )''')

    # Örnek sorular ekleyelim
    cursor.execute('''INSERT INTO questions (question, option1, option2, option3, answer)
                      VALUES ('Python\'da AI geliştirme ne için kullanılır?', 'Veri işleme', 'Ses tanıma', 'Oyun geliştirme', 'Veri işleme')''')
    cursor.execute('''INSERT INTO questions (question, option1, option2, option3, answer)
                      VALUES ('Bilgisayar görüşü hangi alanlarda kullanılır?', 'Görüntü tanıma', 'Doğal dil işleme', 'Veri tabanı yönetimi', 'Görüntü tanıma')''')
    cursor.execute('''INSERT INTO questions (question, option1, option2, option3, answer)
                      VALUES ('NLP (Nöro-dilbilim) nedir?', 'Yapay zeka', 'Doğal dil işleme', 'Makine öğrenmesi', 'Doğal dil işleme')''')
    cursor.execute('''INSERT INTO questions (question, option1, option2, option3, answer)
                      VALUES ('Python uygulamalarında AI modelleri nasıl uygulanır?', 'Kütüphaneler ile', 'Veritabanı ile', 'HTML ile', 'Kütüphaneler ile')''')

    connection.commit()
    connection.close()

if __name__ == '__main__':
    create_database()
